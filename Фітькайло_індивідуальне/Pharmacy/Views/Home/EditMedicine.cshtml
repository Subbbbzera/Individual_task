@model Pharmacy.Models.Medicine

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Редагувати препарат</title>
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h2>Редагування препарату №@Model.Id</h2>

    @using (Html.BeginForm("EditMedicine", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div>
            @Html.LabelFor(m => m.Name, "Назва препарату")
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div>
            @Html.LabelFor(m => m.Manufacturer, "Виробник")
            @Html.TextBoxFor(m => m.Manufacturer)
            @Html.ValidationMessageFor(m => m.Manufacturer)
        </div>

        <div>
            @Html.LabelFor(m => m.Price, "Ціна")
            @Html.TextBoxFor(m => m.Price, new { type = "number", step = "0.1", min = "0" })
            @Html.ValidationMessageFor(m => m.Price)
        </div>

        <div>
            @Html.LabelFor(m => m.Quantity, "Кількість")
            @Html.TextBoxFor(m => m.Quantity, new { type = "number", step = "1", min = "0" })
            @Html.ValidationMessageFor(m => m.Quantity)
        </div>

        <div>
            <input type="submit" value="Зберегти зміни" />
        </div>
    }
</body>
</html>
